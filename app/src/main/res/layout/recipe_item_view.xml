<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Recipe item container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Recipe title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipeItemTitle"
            android:text="Placeholder recipe title"
            android:textStyle="bold"
            />

       <!-- Category and view/edit button container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <!-- Recipe category -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/recipeItemCategory"
                android:layout_weight="1"
                android:text="Placeholder category"
                android:textStyle="bold"
                />

            <!-- Recipe view button -->
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/recipeItemViewButton"
                android:layout_weight="0.5"
                android:text="View"
                />

            <!-- Recipe edit button -->
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/recipeItemEditButton"
                android:layout_weight="0.5"
                android:text="Edit"
                />
            
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>